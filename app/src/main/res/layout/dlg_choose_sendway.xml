<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin"
            android:text="取消"
            android:textColor="@color/qp_item_num"
            android:textSize="@dimen/big_text_size" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin"
            android:src="@mipmap/jt_left"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/seven_margin"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="配送方式"
            android:textColor="@color/app_black"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin"
            android:text="确定"
            android:textColor="@color/qp_item_num"
            android:textSize="@dimen/big_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@mipmap/hm_line" />

    <RelativeLayout
        android:id="@+id/rl_kuaidi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin">

        <ImageView
            android:id="@+id/iv_kuaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/gwc_wxz" />

        <TextView
            android:id="@+id/tv_kuaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/double_margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_toRightOf="@+id/iv_kuaidi"
            android:text="快递"
            android:textColor="@color/qp_item_num"
            android:textSize="@dimen/big_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin"
            android:src="@mipmap/qp_jt"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@mipmap/hm_line" />

    <RelativeLayout
        android:id="@+id/rl_ziti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin">

        <ImageView
            android:id="@+id/iv_ziti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/gwc_wxz" />

        <TextView
            android:id="@+id/tv_ziti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/double_margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_toRightOf="@+id/iv_ziti"
            android:text="自提"
            android:textColor="@color/qp_item_num"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/tv_zitiDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_jt2"
            android:layout_centerVertical="true"
            android:text="仅可以选择填写日的今明后天"
            android:textColor="@color/hm_bottom_text"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_jt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin"
            android:src="@mipmap/qp_jt" />

    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@mipmap/hm_line" />

    <RelativeLayout
        android:id="@+id/rl_shifushangmen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin">

        <ImageView
            android:id="@+id/iv_shifushangmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/gwc_wxz" />

        <TextView
            android:id="@+id/tv_shifushangmen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/double_margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="@dimen/double_margin"
            android:layout_toRightOf="@+id/iv_shifushangmen"
            android:text="师傅上门"
            android:textColor="@color/qp_item_num"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/tv_shangmen_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_jt3"
            android:layout_centerVertical="true"
            android:text="2015-12-16"
            android:textColor="@color/hm_bottom_text"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_jt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin"
            android:src="@mipmap/qp_jt" />

    </RelativeLayout>

    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:background="@mipmap/hm_line" />

</LinearLayout>