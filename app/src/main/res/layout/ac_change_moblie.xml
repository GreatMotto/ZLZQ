<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/double_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_check_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/dl_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/four_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/dl_suo" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_check_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="登录密码验证"
                android:inputType="textPassword"
                android:textColorHint="@color/dl_text_hint_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_new_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@mipmap/dl_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/four_margin"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/dl_dh" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_new_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="新手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/dl_text_hint_color"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_verify_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/rg_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/four_margin"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/dl_suo" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_verify_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColorHint="@color/dl_text_hint_color"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:background="@mipmap/rg_btn_bg"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/three_margin"
            android:background="@mipmap/dl_btn"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size" />
    </LinearLayout>
</LinearLayout>