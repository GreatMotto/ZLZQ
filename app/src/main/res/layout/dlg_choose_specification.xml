<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dlg_title">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/double_margin"
            android:text="筛选条件"
            android:textColor="@color/app_black"
            android:textSize="@dimen/big_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="类型"
                android:textColor="@color/app_black"
                android:textSize="@dimen/big_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    style="@style/shaixuanButton"
                    android:checked="true"
                    android:text="童车" />

                <CheckBox
                    style="@style/shaixuanButton"
                    android:layout_centerInParent="true"
                    android:text="安全椅" />

                <CheckBox
                    style="@style/shaixuanButton"
                    android:layout_alignParentRight="true"
                    android:text="床" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    style="@style/shaixuanButton"
                    android:text="快消品" />

                <CheckBox
                    style="@style/shaixuanButton"
                    android:layout_centerInParent="true"
                    android:text="玩具" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="价格"
                android:textColor="@color/app_black"
                android:textSize="@dimen/big_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sx_dlg_no_check"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:hint="100"
                    android:inputType="number"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/small_text_size"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin"
                    android:background="@mipmap/sx_dlg_price_line" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/sx_dlg_no_check"
                    android:gravity="center"
                    android:textCursorDrawable="@null"
                    android:hint="10000"
                    android:inputType="number"
                    android:textColorHint="@color/app_black"
                    android:textSize="@dimen/small_text_size"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="新旧程度"
                android:textColor="@color/app_black"
                android:textSize="@dimen/big_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    style="@style/shaixuanButton"
                    android:checked="true"
                    android:text="全新" />

                <CheckBox
                    style="@style/shaixuanButton"
                    android:layout_centerInParent="true"
                    android:text="九成新" />

                <CheckBox
                    style="@style/shaixuanButton"
                    android:layout_alignParentRight="true"
                    android:text="八成新" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    style="@style/shaixuanButton"
                    android:text="七成新" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="月龄范围"
                android:textColor="@color/app_black"
                android:textSize="@dimen/big_text_size" />

            <com.bm.zlzq.view.MultiLineRadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/shaixuanButton"
                        android:checked="true"
                        android:text="全部" />

                    <RadioButton
                        style="@style/shaixuanButton"
                        android:layout_marginLeft="@dimen/four_margin"
                        android:text="3个月以下" />

                    <RadioButton
                        style="@style/shaixuanButton"
                        android:layout_marginLeft="@dimen/four_margin"
                        android:text="3-6个月" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <RadioButton
                        style="@style/shaixuanButton"
                        android:text="6-12个月" />

                    <RadioButton
                        style="@style/shaixuanButton"
                        android:layout_marginLeft="@dimen/four_margin"
                        android:text="1-2岁" />

                    <RadioButton
                        style="@style/shaixuanButton"
                        android:layout_marginLeft="@dimen/four_margin"
                        android:text="2岁以上" />
                </LinearLayout>
            </com.bm.zlzq.view.MultiLineRadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin"
                android:background="@mipmap/sx_dlg_sure"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin"
                android:background="@mipmap/sx_dlg_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_size"/>

        </LinearLayout>





    </LinearLayout>
</LinearLayout>
