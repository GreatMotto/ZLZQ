<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/double_margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/double_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/eleven_margin"
                    android:layout_height="wrap_content"
                    android:text="收件人："
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/big_text_size" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"
                    android:maxLength="4"
                    android:text="张小盒"
                    android:textColor="@color/qp_item_num"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/double_margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/double_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/eleven_margin"
                    android:layout_height="wrap_content"
                    android:text="手机号："
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/big_text_size" />

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"
                    android:text="18321252145"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/qp_item_num"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <RelativeLayout
            android:id="@+id/rl_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/double_margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/double_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/eleven_margin"
                    android:layout_height="wrap_content"
                    android:text="所在地区："
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/big_text_size" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin"
                    android:text="上海市虹口区"
                    android:textColor="@color/qp_item_num"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/my_jt" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/double_margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/double_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/eleven_margin"
                    android:layout_height="wrap_content"
                    android:text="街道："
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/big_text_size" />

                <EditText
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="@dimen/margin"
                    android:singleLine="true"
                    android:text="广中路街道"
                    android:textColor="@color/qp_item_num"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/double_margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/double_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/eleven_margin"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/big_text_size" />

                <EditText
                    android:id="@+id/et_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textCursorDrawable="@null"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="@dimen/margin"
                    android:singleLine="true"
                    android:text="上海市虹口区广记路848号"
                    android:textColor="@color/qp_item_num"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

    </LinearLayout>
</LinearLayout>