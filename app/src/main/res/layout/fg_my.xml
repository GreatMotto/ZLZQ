<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_pic_bg">

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/double_margin"
            android:src="@mipmap/my_edit" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_edit"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/my_touxiang"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="500"
            fresco:failureImage="@mipmap/ic_launcher"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImageScaleType="focusCrop"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/alpha_00"
            fresco:roundingBorderWidth="@dimen/half_margin" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sdv_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin"
            android:text="Christine Turner"
            android:textColor="@color/white"
            android:textSize="@dimen/bigger_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/double_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/my_ye"
                android:drawablePadding="@dimen/margin"
                android:text="余额:2000元"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:background="@drawable/my_chongzhi_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="2dp"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <RelativeLayout
            android:id="@+id/rl_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/double_margin"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:paddingTop="@dimen/double_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/my_dd"
                android:drawablePadding="@dimen/margin"
                android:text="我的订单"
                android:textColor="@color/app_black"
                android:textSize="@dimen/big_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/my_jt" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_dfk"
                style="@style/myWuliu"
                android:drawableTop="@mipmap/my_dfk"
                android:text="待付款" />

            <TextView
                android:id="@+id/tv_my_dfh"
                style="@style/myWuliu"
                android:drawableTop="@mipmap/my_dfh"
                android:text="待发货" />

            <TextView
                android:id="@+id/tv_my_dsh"
                style="@style/myWuliu"
                android:drawableTop="@mipmap/my_dsh"
                android:text="待收货" />

            <TextView
                android:id="@+id/tv_my_ysh"
                style="@style/myWuliu"
                android:drawableTop="@mipmap/my_ysh"
                android:text="已收货" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_wddd"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_wddd"
                android:text="我的地址" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hm_line_gray" />

            <TextView
                android:id="@+id/tv_my_wdsc"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_wdsc"
                android:text="我的收藏" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hm_line_gray" />
            <TextView
                android:id="@+id/tv_my_wycz"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_wycz"
                android:text="我要充值" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hm_line_gray" />
            <TextView
                android:id="@+id/tv_my_tzsq"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_tzsq"
                android:text="退租申请" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_wyfx"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_wyfx"
                android:text="我要分享" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hm_line_gray" />

            <TextView
                android:id="@+id/tv_my_yhq"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_yhq"
                android:text="优惠券" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hm_line_gray" />
            <TextView
                android:id="@+id/tv_my_shqd"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_shqd"
                android:text="商户清单" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/hm_line_gray" />
            <TextView
                android:id="@+id/tv_my_xtsz"
                style="@style/myMokuai"
                android:drawableTop="@mipmap/my_xtsz"
                android:text="系统设置" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_phone_and_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务热线 400-400-8888"
            android:textColor="@color/hm_bottom_text"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="工作时间 9:00-19:00"
            android:textColor="@color/hm_bottom_text"
            android:textSize="@dimen/normal_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_manager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_marginBottom="@dimen/half_margin"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line"
            android:layout_alignParentTop="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺管理员"
            android:textColor="@color/app_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_jt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/hm_line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>