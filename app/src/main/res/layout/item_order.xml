<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/hm_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号：客户制定规则"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="交货完成"
                    android:textColor="@color/app_theme"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/hm_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_gwc_pic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_margin"
                    android:text="进口蓝莓125g/份鲜果浆新鲜水果"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥3288.00"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/normal_text_size" />

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_guige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格:500g"
                        android:textColor="@color/hm_bottom_text"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/tv_rend_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:text="租赁期:3个月"
                        android:textColor="@color/hm_bottom_text"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_price"
                    android:layout_marginTop="@dimen/margin"
                    android:text="x1"
                    android:textColor="@color/hm_bottom_text"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/hm_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">

                <TextView
                    android:id="@+id/tv_kuaidi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送方式：快递"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_toLeftOf="@+id/tv_total"
                    android:text="共1件商品"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="合计:￥3288.00"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/normal_text_size" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/hm_line" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin"
            android:paddingRight="@dimen/margin">

            <TextView
                android:id="@+id/tv_black_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/three_margin"
                android:layout_toLeftOf="@+id/tv_orange_btn"
                android:background="@mipmap/my_order_black_btn_bg"
                android:gravity="center"
                android:padding="@dimen/half_margin"
                android:text="续租"
                android:textColor="@color/app_black"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tv_orange_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/my_order_orange_btn_bg"
                android:gravity="center"
                android:padding="@dimen/half_margin"
                android:text="晒单评价"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/normal_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/tv_black_btn"
                android:layout_marginTop="@dimen/margin"
                android:layout_height="0.5dp"
                android:background="@mipmap/hm_line" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>